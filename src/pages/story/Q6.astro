---
import BaseLayout from "@/layouts/BaseLayout.astro";
import ScoredButton from "@/components/story/ScoredButton";
import ChoiceCard from "@/components/story/ChoiceCard";
const redirect = "./Scene5";
import Background from "@/assets/images/barBackground.jpg";
---

<BaseLayout>
  <div class="relative h-screen w-screen">
    <form
      class="absolute left-1/2 top-1/2 z-50 flex w-full -translate-x-1/2 -translate-y-1/2 flex-col items-center justify-center gap-8"
      action={redirect}
    >
      <ChoiceCard
        header="บาร์เทนเดอร์ถามคุณต่อ\nถ้าคุณได้เครื่องดื่มที่ทำให้มี\nพลังวิเศษได้ คุณอยากมีพลังอะไร"
      >
        <ScoredButton client:load text="อ่านใจ" scores={[2, 0, 1, 0, 1, 2]} />
        <ScoredButton client:load text="ย้อนเวลา" scores={[2, 0, 0, 2, 1, 1]} />
        <ScoredButton client:load text="ล่องหน" scores={[0, 2, 0, 2, 2, 1]} />
        <ScoredButton
          client:load
          text="เห็นอนาคต"
          scores={[2, 0, 0, 1, 1, 1]}
        />
      </ChoiceCard>
    </form>

    <div
      class="absolute left-1/2 top-1/2 z-40 h-screen w-screen -translate-x-1/2 -translate-y-1/2"
    >
      <img
        class="relative z-0 mx-auto h-screen w-screen object-cover"
        src={Background.src}
        alt="bar"
      />
    </div>
  </div>
</BaseLayout>
